@model Candidate
<div class= "display-6">
    Application form for online course registration
</div>

<form method="post" asp-action="apply">
    <div class = "text-danger" asp-validation-summary="All"></div>
        
    <div class = "form-group my-2">
        <label for="">Name</label>
        <input name = "name" class = "form-control">
    </div>
    <div class = "form-group my-2">
        <label for="">Lastname</label>
        <input name = "lastname"class = "form-control">
    </div>
    <div class = "form-group my-2">
        <label for="">Email</label>
        <input name = "email"class = "form-control">
    </div>
    <div class = "form-group my-2">
        <label for="">Age</label>
        <select name = "age" class= "form-control">
            <option value = "">Select Age</option>
            @for (int i = 18; i <= 25; i++)
            {
                <option value = "@i">@i</option>
            }
        </select>
    </div>
    <fieldset>
        <legend>Select a course</legend>
        <p><input id = "mvc" type = "radio" name= "selectedCourse" value="ASP.NET Core MVC" />
        <label>ASP.NET Core MVC</label>
        </p>
        <p><input id = "api" type = "radio" name= "selectedCourse" value="ASP.NET Core APÄ°" />
        <label>ASP.NET Core API</label>
        </p>
        <p><input id = "csharp" type = "radio" name= "selectedCourse" value="csharp" />
        <label>C#</label>
        </p>
    </fieldset>

    <div>
        <button class = "btn btn-primary" type = "submit" >Submit</button>
        <a class = "btn btn-warning" asp-controller="Home" asp-action="index">Cancel</a>
    </div>
</form>